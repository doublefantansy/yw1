<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="@dimen/dp_300"
  android:layout_height="match_parent"
  android:layout_gravity="right"
  android:background="@drawable/draw_layout_style">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_10"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_marginRight="@dimen/dp_10">

      <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/chooseStartDate"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="起始日期"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:textRadius="@dimen/dp_5"
        app:textSolidColor="@color/hzBlue"/>

      <TextView
        android:id="@+id/displayStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_18"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_10"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_marginRight="@dimen/dp_10">

      <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/chooseEndDate"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="结束日期"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:textRadius="@dimen/dp_5"
        app:textSolidColor="@color/hzBlue"/>

      <TextView
        android:id="@+id/displayEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_18"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_10"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_marginRight="@dimen/dp_10">

      <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/chooseAgency"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="项目"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:textRadius="@dimen/dp_5"
        app:textSolidColor="@color/hzBlue"/>

      <TextView
        android:id="@+id/displayAgency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/sp_18"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_10"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_marginRight="@dimen/dp_10">

      <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/chooseStatus"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="状态"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:textRadius="@dimen/dp_5"
        app:textSolidColor="@color/hzBlue"/>

      <TextView
        android:id="@+id/displayStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/sp_18"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_alignParentBottom="true">

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1">

      <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/submit"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:textRadius="@dimen/dp_5"
        app:textSolidColor="@color/myGreen"/>
    </RelativeLayout>

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1">

      <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/reset"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="重置"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:textRadius="@dimen/dp_5"
        app:textSolidColor="@color/myRed"/>
    </RelativeLayout>
  </LinearLayout>
</RelativeLayout>
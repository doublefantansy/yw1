<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dp"
  >


  <LinearLayout
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/normal_style"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/dp_10"
      android:orientation="vertical">
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/applyTimeTitle"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:text="申请时间："
          android:textSize="17sp"></TextView>

        <TextView
          android:id="@+id/applyTime"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginRight="5dp"
          android:layout_toRightOf="@id/applyTimeTitle"
          android:gravity="center_vertical"
          android:textSize="17sp"></TextView>
      </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/useCartTimeTitle"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:text="用车时间："
          android:textSize="17sp"></TextView>

        <TextView
          android:id="@+id/useCartTime"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginRight="5dp"
          android:layout_toRightOf="@id/useCartTimeTitle"
          android:gravity="center_vertical"
          android:textSize="17sp"></TextView>

        <TextView
          android:id="@+id/status"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginRight="10dp"
          android:layout_alignParentRight="true"
          android:gravity="center_vertical"
          android:textColor="@color/hzBlue"
          android:textSize="17sp"
          android:visibility="gone"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/useCartProjectTitle"

          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:text="租车项目："
          android:textSize="17sp"></TextView>

        <TextView
          android:id="@+id/useCartProject"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_toRightOf="@id/useCartProjectTitle"
          android:gravity="center_vertical"
          android:textSize="17sp"></TextView>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/applyUserTitle"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:text="&#12288;租车人："
          android:textSize="17sp"></TextView>

        <TextView
          android:id="@+id/applyUser"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_toRightOf="@id/applyUserTitle"
          android:gravity="center_vertical"
          android:textSize="17sp"></TextView>
      </RelativeLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>